{
	"manifest_version": 2,
	"name": "rsa-on-facebook",
	"description": "Chrome extension for encrypting messages on facebook using user generated RSA keys.",
	"version": "1.0",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "default-popup.html",
		"default_title": "Select RSA keys"
	},
	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/",
		"https://facebook.com/*"
	],
	"content_scripts": [
		{
			"js": [
				"facebook-message-interceptor.js"
			],
			"matches": [
				"*://www.facebook.com/*"
			],
			"run_at": "document_start"
		}
	]
}